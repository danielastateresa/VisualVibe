@model VisualVibe.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>VisualVibe</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar d-flex flex-column">
            <div class="brand text-center py-4">
                <img src="~/img/logo.png" style="width: 100%; height: 150px; object-fit: contain; margin-bottom: 2px;">
            </div>
            <a href="#" class="nav-link"><i class="bi bi-grid-fill me-2"></i>Dashboard</a>
            <a href="#" class="nav-link"><i class="bi bi-calendar2-check-fill me-2"></i>Bookings</a>
            <a href="#" class="nav-link active"><i class="bi bi-people-fill me-2"></i>Users</a>
            <a href="#" class="nav-link"><i class="bi bi-shop-window me-2"></i>Services</a>
            <a href="#" class="nav-link"><i class="bi bi-envelope-fill me-2"></i>Inbox</a>
            <a href="#" class="nav-link"><i class="bi bi-chat-dots-fill me-2"></i>Messages</a>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4">
            <div class="d-flex justify-content-end align-items-center mb-4">
                <i class="bi bi-person-circle fs-4 me-2"></i>
                <span class="profile">Nico Robin</span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold">Update Profile</h2>
                <a href="/Admin/Users" class="fw-semibold text-dark">&lt; Back</a>
            </div>

            <form asp-action="Edit" asp-controller="Admin" method="post" class="w-50">
                <input type="hidden" asp-for="Id" />

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label fw-semibold">Name</label>
                    <div class="col-sm-8">
                        <input asp-for="Name" class="form-control" placeholder="Name" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label fw-semibold">Address</label>
                    <div class="col-sm-8">
                        <input asp-for="Address" class="form-control" placeholder="Address" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label fw-semibold">Email</label>
                    <div class="col-sm-8">
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label fw-semibold">Number</label>
                    <div class="col-sm-8">
                        <input asp-for="Number" class="form-control" placeholder="Number" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label fw-semibold">Position</label>
                    <div class="col-sm-8">
                        <input asp-for="Position" class="form-control" placeholder="Position" />
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-50">Update</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
