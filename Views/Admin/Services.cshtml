@{
	ViewBag.Title = "Services";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard - VisualVibe</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar d-flex flex-column">
            <div class="brand text-center py-4">
                <img src="~/img/logo.png" style="width: 100%; height: 150px; object-fit: contain; margin-bottom: 2px;">
            </div>
            <a href="/Admin/Dashboard" class="nav-link active"><i class="bi bi-grid-fill me-2"></i>Dashboard</a>
            <a href="/Admin/Bookings" class="nav-link"><i class="bi bi-calendar2-check-fill me-2"></i>Bookings</a>
            <a href="/Admin/Users" class="nav-link"><i class="bi bi-people-fill me-2"></i>Users</a>
            <a href="/Admin/Services" class="nav-link"><i class="bi bi-shop-window me-2"></i>Services</a>
            <a href="/Admin/Inbox" class="nav-link"><i class="bi bi-envelope-fill me-2"></i>Inbox</a>
            <a href="/Admin/Messages" class="nav-link"><i class="bi bi-chat-dots-fill me-2"></i>Messages</a>
        </div>
        <!-- Main Content -->
        <div class="flex-grow-1 p-4">
            <!-- Top Right Profile -->
            <div class="d-flex justify-content-end align-items-center mb-4 position-fixed-top-right">
                <div class="dropdown">
                    <a class="d-flex align-items-center text-decoration-none dropdown-toggle" style="color:black;" href="#" role="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle fs-4 me-2"></i>
                        <span class="profile">Nico Robin</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                        <li><a class="dropdown-item" href="/Profile/Profile">Profile</a></li>
                        <li><a class="dropdown-item" href="/Settings">Settings</a></li>
                        <li>
                            <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-link text-danger">Logout</button>
                            </form>

                        </li>
                    </ul>
                </div>
            </div>
           
            <h1 class="mb-4 fw-bold">Services</h1>    

            <div class="tab-links mb-3">
                <a href="#">All Services</a>
                <a href="#">Decoration</a>
                <a href="#">Vendor</a>
            </div>
            <div class="container my-4">
                <div class="row g-4">                   
                    <div class="col-md-6">
                        <div class="card shadow-sm p-3 d-flex flex-row align-items-center" style="gap: 1rem;">                           
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQFANSDarbMmCo43I8LPvY_hIvKG8w8iI8kJA&s" class="rounded" style="width: 100px; height: 100px; object-fit: cover;" />                           
                            <div class="flex-grow-1">
                                <h5 class="fw-bold mb-2">Amante Fleurs</h5>
                                <p class="mb-2 text-muted">Price Range: P10,000 - P25,000</p>

                                <div>
                                    <span class="text-warning">
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star"></i>
                                    </span>
                                    <span class="ms-2 text-muted">(4.0)</span>
                                </div>
                            </div>
                        </div>
                    </div>                    
                    <div class="col-md-6">
                        <div class="card shadow-sm p-3 d-flex flex-row align-items-center" style="gap: 1rem;">
                            <img src="https://media.istockphoto.com/id/493839116/photo/tables-with-centerpieces-at-wedding-reception.jpg?s=612x612&w=0&k=20&c=g-tb7QZoq3nGXBKEsjNf-hPUUt-U_rhDny0VnHWd3xk=" class="rounded" style="width: 100px; height: 100px; object-fit: cover;" />
                            <div class="flex-grow-1">
                                <h5 class="fw-bold mb-2">Vintage Event</h5>
                                <p class="mb-2 text-muted">Price Range: P10,000 - P20,000</p>

                                <div>
                                    <span class="text-warning">
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-half"></i>
                                        <i class="bi bi-star"></i>
                                    </span>
                                    <span class="ms-2 text-muted">(3.5)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card shadow-sm p-3 d-flex flex-row align-items-center" style="gap: 1rem;">
                            <img src="https://i0.wp.com/www.weddingforward.com/wp-content/uploads/2022/11/lavender-wedding-reception-table-place-setting-bazevents.jpg?fit=1080%2C1350&quality=70&ssl=1" class="rounded" style="width: 100px; height: 100px; object-fit: cover;" />
                            <div class="flex-grow-1">
                                <h5 class="fw-bold mb-2">Lavander Events</h5>
                                <p class="mb-2 text-muted">Price Range: P30,000 - P50,000</p>

                                <div>
                                    <span class="text-warning">
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-half"></i>
                                        <i class="bi bi-star"></i>
                                    </span>
                                    <span class="ms-2 text-muted">(3.5)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card shadow-sm p-3 d-flex flex-row align-items-center" style="gap: 1rem;">
                            <img src="https://i.pinimg.com/474x/cf/e3/8d/cfe38d5fa8adf9d819b571acc154a27c.jpg" class="rounded" style="width: 100px; height: 100px; object-fit: cover;" />
                            <div class="flex-grow-1">
                                <h5 class="fw-bold mb-2">Enchanted</h5>
                                <p class="mb-2 text-muted">Price Range: P35,000 - P50,000</p>

                                <div>
                                    <span class="text-warning">
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                    </span>
                                    <span class="ms-2 text-muted">(5)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card shadow-sm p-3 d-flex flex-row align-items-center" style="gap: 1rem;">
                            <img src="https://organiceventssupplyco.com/cdn/shop/articles/shutterstock_1673082490.jpg?v=1704329562" class="rounded" style="width: 100px; height: 100px; object-fit: cover;" />
                            <div class="flex-grow-1">
                                <h5 class="fw-bold mb-2">Majesty</h5>
                                <p class="mb-2 text-muted">Price Range: P15,000 - P35,000</p>

                                <div>
                                    <span class="text-warning">
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star"></i>
                                    </span>
                                    <span class="ms-2 text-muted">(4)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card shadow-sm p-3 d-flex flex-row align-items-center" style="gap: 1rem;">
                            <img src="https://i.pinimg.com/736x/23/17/07/231707e88b7cf287b881ed1e17c9ed26.jpg" class="rounded" style="width: 100px; height: 100px; object-fit: cover;" />
                            <div class="flex-grow-1">
                                <h5 class="fw-bold mb-2">Serene Event</h5>
                                <p class="mb-2 text-muted">Price Range: P15,000 - P25,000</p>

                                <div>
                                    <span class="text-warning">
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-half"></i>                                     
                                    </span>
                                    <span class="ms-2 text-muted">(4.5)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>


